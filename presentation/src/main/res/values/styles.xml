<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UCMC.BottomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/font_body_large</item>
        <item name="android:textStyle">bold</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_medium</item>
    </style>

    <style name="Theme.UCMC.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">?android:attr/colorBackground</item>
        <item name="colorOnPrimary">?attr/colorOnBackground</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize5Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="Theme.UCMC.ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">@dimen/font_label_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Theme.UCMC.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/neutral90</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.UCMC.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/neutral40</item>
        <item name="colorSecondary">@color/primaryColor</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_title_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_body_large</item>
    </style>

</resources>